<script src="//maps.google.com/maps/api/js?key=AIzaSyDKNVZPkWd4SVv42oAcG2nGZHoKlb6YC2A&v=3.13&sensor=false&libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<h1> Here are your closest mailboxes:</h1>

<table class="table">
  <thead>
    <tr>
      <th>Location</th>
      <th>Distance</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
   <% @results.each do |mailbox| %>
      <tr>
        <td><%= mailbox.address %></td>
        <td><%= mailbox.distance_from(@query).round(2) %>  miles</td>
        <td><%= button_to("Make a Favorite", favorites_path(mailbox_id: mailbox.id, address_searched: @query), method: :post) %></td>
      </tr>
  <% end -%>
</tbody>
</table>




<div>

<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<!-- javascript here -->

<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function () {
  markers = handler.addMarkers(<%=raw @markers.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
  handler.getMap().setZoom(15);
  });
</script>






