<center>
<table class="table">
    <thead>
          <tr>
              <th>Mailbox location</th>
              <th>Search reference address</th>
              <th></th>
          </tr>
      </thead>

      <tbody>
            <tr>
                  <% @favorites.each do |mailbox| %>
                <td><%= Mailbox.find(mailbox.mailbox_id).address %></td>
                <td>near: <%= mailbox.address_searched.capitalize %></td>


                  <% if user_signed_in? %>
                      <td> <%= button_to "Remove", favorites_path(current_user), method: 'destroy', data: {confirm: "Are you sure you want to delete this mailbox from your favorites?"}%></td>
                    <% end %>
            </tr>
                  <% end %>
      </tbody>
</table>
</center>